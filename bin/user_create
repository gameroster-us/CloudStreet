#!/data/api/current/bin/rails runner

CSLogger.info "user_create <email> <username> <password>" unless ARGV.size == 3

email    = ARGV[0]
username = ARGV[1]
password = ARGV[2]

ActiveRecord::Base.transaction do
  @user    ||= UserCreator.create!(email, username, password)
  @account ||= AccountCreator.create!(@user)
end
